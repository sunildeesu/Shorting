# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=your_channel_id_here

# Optional: Adjust monitoring parameters
DROP_THRESHOLD_PERCENT=2.0

# Demo Mode (set to true to use mock data for testing)
DEMO_MODE=false

# Data Source (yahoo, nsepy, or kite)
DATA_SOURCE=nsepy

# Kite Connect API Credentials (only needed if DATA_SOURCE=kite)
# Get your API credentials from https://developers.kite.trade/
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=your_access_token_here

# Rate Limiting Configuration
REQUEST_DELAY_SECONDS=1.0   # Delay between each stock request
MAX_RETRIES=3               # Maximum retry attempts per stock
RETRY_DELAY_SECONDS=2.0     # Base delay before retry (exponential backoff)

# Dropbox Upload Configuration (for Volume Profile and Greeks Tracker)
VOLUME_PROFILE_ENABLE_DROPBOX=true  # Enable/disable Dropbox upload for volume profile reports
VOLUME_PROFILE_DROPBOX_TOKEN=your_dropbox_token_here  # Get from https://www.dropbox.com/developers/apps
VOLUME_PROFILE_DROPBOX_FOLDER=/VolumeProfile  # Dropbox folder path

GREEKS_DIFF_CLOUD_PROVIDER=dropbox  # 'google_drive' or 'dropbox'
GREEKS_DIFF_DROPBOX_TOKEN=your_dropbox_token_here  # Same token can be used for both

# CPR First Touch Alerts (monitors NIFTY CPR levels)
ENABLE_CPR_ALERTS=true  # Enable/disable CPR monitoring
CPR_COOLDOWN_MINUTES=1440  # Once per day (24 hours)
CPR_DRY_RUN_MODE=false  # Set to true for testing (no actual alerts sent)
